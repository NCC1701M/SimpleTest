{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/SimpleTest/SimpleTest.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Add migration",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"ef",
				"migrations",
				"add",
				"${input:migrationName}",
				"--startup-project",
				"${workspaceFolder}/SimpleTest/SimpleTest.csproj",
				"--project",
				"${workspaceFolder}/SimpleTest/SimpleTest.csproj",
				"--context",
				"DataContext"
			],
			"problemMatcher": [],
			"linux": {
				"options": {
					"env": {
						"PATH": "${env:PATH}:/root/.dotnet/tools"
					}
				}
			}
		}
	],
	"inputs": [
		{
			"id": "migrationName",
			"type": "promptString",
			"description": "Enter the name of the migration"
		}
	]
}